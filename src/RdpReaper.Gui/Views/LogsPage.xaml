<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="RdpReaper.Gui.Views.LogsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RdpReaper.Gui.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="12">
            <TextBlock FontSize="24" FontWeight="SemiBold" Text="Service Logs" />
            <StackPanel Orientation="Horizontal" Spacing="12">
                <ProgressRing IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" Width="18" Height="18" />
                <Button Content="Refresh" Click="OnRefreshClicked" />
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Foreground="DarkRed"
                Text="{x:Bind ViewModel.ErrorText, Mode=OneWay}"
                TextWrapping="Wrap"
                Visibility="{x:Bind ViewModel.ErrorVisibility, Mode=OneWay}" />

            <ListView
                Grid.Row="1"
                ItemsSource="{x:Bind ViewModel.Entries, Mode=OneWay}"
                Margin="0,8,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:LogEntryView">
                        <Grid Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{x:Bind TimeUtc}" />
                            <TextBlock Grid.Column="1" Text="{x:Bind Level}" />
                            <TextBlock Grid.Column="2" Text="{x:Bind Source}" />
                            <TextBlock Grid.Column="3" Text="{x:Bind EventId}" />
                            <TextBlock Grid.Column="4" Text="{x:Bind Message}" TextWrapping="Wrap" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>

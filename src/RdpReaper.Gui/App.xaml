<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="RdpReaper.Gui.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RdpReaper.Gui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <x:String x:Key="HeaderFontFamily">Bahnschrift</x:String>
            <x:String x:Key="BodyFontFamily">Bahnschrift</x:String>

            <Color x:Key="AppBackground">#0B1016</Color>
            <Color x:Key="AppBackground2">#0F1621</Color>
            <Color x:Key="AppSurface">#151E2B</Color>
            <Color x:Key="AppSurfaceAlt">#1B2534</Color>
            <Color x:Key="AppCard">#111926</Color>
            <Color x:Key="AppBorder">#273345</Color>
            <Color x:Key="AppAccent">#E3564A</Color>
            <Color x:Key="AppAccentSoft">#F2A089</Color>
            <Color x:Key="AppSuccess">#3FB984</Color>
            <Color x:Key="AppWarning">#F2B05E</Color>
            <Color x:Key="AppTextHigh">#F1F5F9</Color>
            <Color x:Key="AppTextMuted">#9AA7B6</Color>

            <LinearGradientBrush x:Key="AppBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="{StaticResource AppBackground}" Offset="0" />
                <GradientStop Color="{StaticResource AppBackground2}" Offset="1" />
            </LinearGradientBrush>

            <SolidColorBrush x:Key="AppSurfaceBrush" Color="{StaticResource AppSurface}" />
            <SolidColorBrush x:Key="AppSurfaceAltBrush" Color="{StaticResource AppSurfaceAlt}" />
            <SolidColorBrush x:Key="AppCardBrush" Color="{StaticResource AppCard}" />
            <SolidColorBrush x:Key="AppBorderBrush" Color="{StaticResource AppBorder}" />
            <SolidColorBrush x:Key="AppAccentBrush" Color="{StaticResource AppAccent}" />
            <SolidColorBrush x:Key="AppAccentSoftBrush" Color="{StaticResource AppAccentSoft}" />
            <SolidColorBrush x:Key="AppSuccessBrush" Color="{StaticResource AppSuccess}" />
            <SolidColorBrush x:Key="AppWarningBrush" Color="{StaticResource AppWarning}" />
            <SolidColorBrush x:Key="AppTextHighBrush" Color="{StaticResource AppTextHigh}" />
            <SolidColorBrush x:Key="AppTextMutedBrush" Color="{StaticResource AppTextMuted}" />

            <x:Double x:Key="AppFontSize">14</x:Double>

            <Style x:Key="PageTitle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="28" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="FontFamily" Value="{StaticResource HeaderFontFamily}" />
                <Setter Property="Foreground" Value="{StaticResource AppTextHighBrush}" />
            </Style>

            <Style x:Key="SectionTitle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="FontFamily" Value="{StaticResource HeaderFontFamily}" />
                <Setter Property="Foreground" Value="{StaticResource AppTextHighBrush}" />
            </Style>

            <Style x:Key="SubtitleText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="13" />
                <Setter Property="Foreground" Value="{StaticResource AppTextMutedBrush}" />
            </Style>

            <Style x:Key="Card" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource AppCardBrush}" />
                <Setter Property="BorderBrush" Value="{StaticResource AppBorderBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="Padding" Value="16" />
            </Style>

            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AppAccentBrush}" />
                <Setter Property="Foreground" Value="{StaticResource AppTextHighBrush}" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="Padding" Value="14,10" />
            </Style>

            <Style x:Key="GhostButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AppSurfaceAltBrush}" />
                <Setter Property="Foreground" Value="{StaticResource AppTextHighBrush}" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="Padding" Value="12,9" />
            </Style>

            <Style x:Key="ToolbarButton" TargetType="Button">
                <Setter Property="Padding" Value="10,6" />
                <Setter Property="CornerRadius" Value="8" />
            </Style>

            <Style x:Key="ToolbarToggleButton" TargetType="ToggleButton">
                <Setter Property="Padding" Value="10,6" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

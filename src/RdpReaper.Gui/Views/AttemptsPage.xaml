<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="RdpReaper.Gui.Views.AttemptsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RdpReaper.Gui.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Spacing="12">
            <TextBlock FontSize="24" FontWeight="SemiBold" Text="Attempts" />
            <StackPanel Orientation="Horizontal" Spacing="12">
                <ProgressRing IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" Width="18" Height="18" />
                <Button Content="Refresh" Click="OnRefreshClicked" />
                <TextBox Width="160" PlaceholderText="IP" Text="{x:Bind ViewModel.FilterIp, Mode=TwoWay}" />
                <TextBox Width="160" PlaceholderText="Username" Text="{x:Bind ViewModel.FilterUsername, Mode=TwoWay}" />
                <ComboBox Width="140" SelectedIndex="{x:Bind ViewModel.OutcomeIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="Any" />
                    <ComboBoxItem Content="Failure" />
                    <ComboBoxItem Content="Success" />
                </ComboBox>
                <CalendarDatePicker Header="From" Date="{x:Bind ViewModel.FromDate, Mode=TwoWay}" />
                <CalendarDatePicker Header="To" Date="{x:Bind ViewModel.ToDate, Mode=TwoWay}" />
                <Button Content="Prev" Click="OnPrevClicked" />
                <TextBlock VerticalAlignment="Center" Text="{x:Bind ViewModel.PageText, Mode=OneWay}" />
                <Button Content="Next" Click="OnNextClicked" />
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Foreground="DarkRed"
                Text="{x:Bind ViewModel.ErrorText, Mode=OneWay}"
                TextWrapping="Wrap"
                Visibility="{x:Bind ViewModel.ErrorVisibility, Mode=OneWay}" />

            <ListView
                Grid.Row="1"
                ItemsSource="{x:Bind ViewModel.Attempts, Mode=OneWay}"
                Margin="0,8,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:AttemptView">
                        <Grid Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{x:Bind TimeUtc}" />
                            <TextBlock Grid.Column="1" Text="{x:Bind Ip}" />
                            <TextBlock Grid.Column="2" Text="{x:Bind Username}" />
                            <TextBlock Grid.Column="3" Text="{x:Bind Outcome}" />
                            <TextBlock Grid.Column="4" Text="{x:Bind Status}" />
                            <TextBlock Grid.Column="5" Text="{x:Bind LogonType}" />
                            <TextBlock Grid.Column="6" Text="{x:Bind EventId}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>

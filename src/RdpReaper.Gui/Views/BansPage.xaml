<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="RdpReaper.Gui.Views.BansPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RdpReaper.Gui.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="12">
            <TextBlock FontSize="24" FontWeight="SemiBold" Text="Active Bans" />
            <StackPanel Orientation="Horizontal" Spacing="12">
                <ProgressRing IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" Width="18" Height="18" />
                <Button Content="Refresh" Click="OnRefreshClicked" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <TextBox Width="200" PlaceholderText="IP to ban" Text="{x:Bind ViewModel.ManualIp, Mode=TwoWay}" />
                <TextBox Width="120" PlaceholderText="Seconds" Text="{x:Bind ViewModel.ManualDurationSeconds, Mode=TwoWay}" />
                <TextBox Width="240" PlaceholderText="Reason" Text="{x:Bind ViewModel.ManualReason, Mode=TwoWay}" />
                <ToggleSwitch Header="Permanent" IsOn="{x:Bind ViewModel.ManualPermanent, Mode=TwoWay}" />
                <Button Content="Ban" Click="OnBanClicked" />
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Foreground="DarkRed"
                Text="{x:Bind ViewModel.ErrorText, Mode=OneWay}"
                TextWrapping="Wrap"
                Visibility="{x:Bind ViewModel.ErrorVisibility, Mode=OneWay}" />

            <ListView
                Grid.Row="1"
                ItemsSource="{x:Bind ViewModel.Bans, Mode=OneWay}"
                Margin="0,8,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:BanView">
                        <Grid Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{x:Bind BanType}" />
                            <TextBlock Grid.Column="1" Text="{x:Bind Key}" />
                            <TextBlock Grid.Column="2" Text="{x:Bind CreatedAtUtc}" />
                            <TextBlock Grid.Column="3" Text="{x:Bind ExpiresAtUtc}" />
                            <TextBlock Grid.Column="4" Text="{x:Bind Reason}" TextWrapping="Wrap" />
                            <Button Grid.Column="5" Content="Unban" Tag="{x:Bind Key}" Click="OnUnbanClicked" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>

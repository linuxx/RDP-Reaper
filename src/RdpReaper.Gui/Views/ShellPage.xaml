<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="RdpReaper.Gui.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <NavigationView
        x:Name="NavView"
        IsBackEnabled="False"
        IsBackButtonVisible="Collapsed"
        PaneDisplayMode="Left"
        SelectionChanged="OnSelectionChanged">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Dashboard" Icon="Home" Tag="Dashboard" />
            <NavigationViewItem Content="Bans" Icon="BlockContact" Tag="Bans" />
            <NavigationViewItem Content="Attempts" Icon="List" Tag="Attempts" />
            <NavigationViewItem Content="Policy" Icon="Setting" Tag="Policy" />
            <NavigationViewItem Content="Logs" Icon="Document" Tag="Logs" />
        </NavigationView.MenuItems>

        <Frame x:Name="ContentFrame" />
    </NavigationView>
</Page>
